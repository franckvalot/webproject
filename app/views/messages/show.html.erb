<div class="col-md-8 col-md-offset-2">
	<h2><%= @message.title %></h2>
	<p>Posté par  <%= @message.user.email %> il y a <%= time_ago_in_words(@message.created_at) %></p>
	<p><%= @message.description %></p>


	<h3>Commentaires :</h3>
	<%= render @message.comments %>

	<h3>Répondre au message : </h3>
	<%= render 'comments/form' %>

	<%= link_to "Retour",  root_path %>
	<% if user_signed_in? %>
		<% if @message.user_id == current_user.id %>
			<%= link_to "Modifier", edit_message_path(@message) %>
			<%= link_to "Supprimer", message_path(@message), method: :delete, data: {confirm: "Etes vous sure de supprimer?"} %>
		<% end %>
	<% end %>
</div>
