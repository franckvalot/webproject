<% @messages.each do |message| %>
<div class="col-lg-4 col-sm-6 col-xs-8 col-xs-offset-2">
	<h2><%= message.title %></h2>
	<%= link_to "Lire message", message_path(message), class: "btn btn-default" %>
</div>
<% end %>
<div class="col-lg-4 col-sm-8 col-xs-8 col-xs-offset-2">
	<%= link_to "Nouveau Message", new_message_path,  class: "btn btn-default" %>
</div>