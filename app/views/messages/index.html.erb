<div = class="row">
	<% @messages.each do |message| %>
		<div class="col-lg-4 col-md-6">
			<div class="message">	
				<h2><%= message.title %></h2>
				<%= link_to "Lire message", message_path(message), class: "btn btn-default" %>
			</div>
		</div>
	<% end %>
</div>

<div class="row">
		<div class="col-lg-4 col-md-6">
			<%= link_to "Nouveau Message", new_message_path,  class: "new-message btn" %>
		</div>
		<div class="col-lg-8 col-md-6"></div>
</div>

